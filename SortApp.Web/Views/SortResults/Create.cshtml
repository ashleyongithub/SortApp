@model SortApp.Web.Models.SortResult

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Numbers" class="control-label"></label>
            <input asp-for="Numbers" class="form-control" />
            <span asp-validation-for="Numbers" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Order" class="control-label"></label>            
            <select asp-for="Order">
                <option value="Ascending">Ascending</option>
                <option value="Descending">Descending</option>
            </select>
            <span asp-validation-for="Order" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
